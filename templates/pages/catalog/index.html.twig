{% extends 'base.html.twig' %}
{% trans_default_domain 'app' %}
{% block title %}{{ 'app.catalog'|trans|capitalize }}{% endblock %}

{% block stylesheetsExtends %}
    {{ encore_entry_link_tags('htmx') }}
{% endblock %}

{% block javascriptsExtends %}
    {{ encore_entry_script_tags('htmx') }}
{% endblock %}

{% block body %}
    {# Header #}
    {{ component('SectionHeaderComponent', {
        title: 'app.catalog'|trans|capitalize,
        menuBreadcrumb: {
            'current' : 'app.catalog'|trans|capitalize
        }
    }) }}

    {# Search Bar #}
    {{ component('SearchComponent', {
        placeholder: 'catalog.search'|trans,
        isToggleAdvanced: true,
        toggleAdvancedTitle: 'catalog.search_advanced'|trans,
        toggleAdvancedText: 'catalog.toggleAdvancedText'|trans,
        isToggleAdult: true,
        toggleAdultTitle: 'catalog.adult'|trans,
        toggleAdultText: 'catalog.toggleAdultText'|trans,
    }) }}

    {# HTMX Search results #}
    <section id="search-results"  class="bg-app-clear-white dark:bg-app-dark-gray">
        {{ include ('components/htmx/mangas_list.html.twig') }}
    </section>

    {# Gallery #}
    {{ component('GalleryComponent', {
        mangas: paginationMangas,
        isPagination: true
    }) }}

{% endblock %}
