{% extends 'base.html.twig' %}

{% block title %}{{ app_name }}{% endblock %}

{% block body %}
    <!-- Jumbotron -->
    <section class="bg-app-clear-white dark:bg-app-dark-black">
        <div class="py-8 px-4 mx-auto max-w-screen-xl text-left lg:py-16">
            <h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-900 md:text-5xl lg:text-6xl dark:text-white">
                <span class="text-transparent bg-clip-text bg-gradient-to-r to-emerald-600 from-sky-400">
                    Synchronisez votre <br>
                    passion pour les<br>
                    mangas.
                </span>
            </h1>

            <div class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0">
                <svg class="w-[25px] h-[25px] text-app-clear-black dark:text-app-dark-gray2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 8">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 5.326 5.7a.909.909 0 0 0 1.348 0L13 1"/>
                </svg>
            </div>
        </div>
    </section>

    <!-- Top mangas -->
    {{ component('MangaCardInlineComponent', {
        title: 'Les dernières tendances',
        mangas: topMangas
    }) }}

    <!-- Info section -->
    {{ component('InfoSectionComponent', {
        title: 'Une expérience synchronisée',
        info: 'MangaSync, votre compagnon, transforme chaque scan en une aventure sur mesure. Personnalisez votre propre scanthèque et suivez vos scans préférés où que vous soyez.'
    }) }}

    <!-- Latest mangas -->
    {{ component('MangaCardInlineComponent', {
        title: 'Les dernières sorties',
        mangas: latestMangas
    }) }}

    <!-- Info section -->
    {{ component('InfoSectionComponent', {
        inline: true,
        info: 'Marquez vos chapitres lus et synchronisez vos lectures sur tous vos appareils grâce à MangaSync.'
    }) }}
{% endblock %}
