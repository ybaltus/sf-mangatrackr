<div{{ attributes }}>
    <!-- component html -->
    <section class="bg-app-clear-white dark:bg-app-dark-black">
        <div
                {{ stimulus_controller('search-catalog') }}
                class="flex items-center pb-20 justify-center"
        >
            <label for="searchTerm" class="mb-2 text-sm font-medium text-app-clear-black sr-only dark:text-app-dark-gray2">Search</label>
            <div class="relative w-1/3 mr-5 text-center">
                <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none ">
                    <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                    </svg>
                </div>
                <!-- Search in bdd -->
                <input
                        {{ stimulus_target('search-catalog', 'searchDb') }}
                        {{ stimulus_action('search-catalog', 'hiddenGallery', 'keyup', { 'debounceTimeout': 1000 }) }}
                        type="search"
                        id="searchTerm"
                        name="searchTerm"
                        class="mb-5 block w-full p-4 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                        placeholder="{{ placeholder|escape }}"
                        pattern="[a-zA-Z0-9-_]+"
                        maxlength="50"
                        minlength="3"
                        hx-post="/manga/search"
                        hx-trigger="keyup changed delay:1000ms"
                        hx-target="#search-results"
                        hx-indicator="#search-indicator"
                        hx-include="[name='adult-input']"
                >

                <!-- Search with Jikan API -->
                <input
                        {{ stimulus_target('search-catalog', 'searchApi') }}
                        {{ stimulus_action('search-catalog', 'hiddenGallery', 'change') }}
                        type="search"
                        id="searchTerm"
                        name="searchTerm"
                        class="hidden block w-full p-4 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500"
                        pattern="[a-zA-Z0-9-_]+"
                        maxlength="50"
                        minlength="3"
                        placeholder="{{ placeholder|escape }}"
                        hx-post="/manga/search/api_jikan"
                        hx-trigger="keyup changed delay:1000ms"
                        hx-target="#search-results"
                        hx-indicator="#search-indicator"
                >

                <!-- Advanced option -->
                <label class="relative inline-flex items-center cursor-pointer">
                    <input
                            {{ stimulus_action('search-catalog', 'hiddenSearch', 'click') }}
                            type="checkbox"
                            value=""
                            class="sr-only peer"
                    >
                    <div
                            class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"
                    ></div>
                    <span
                            class="ms-3 text-sm font-medium text-gray-900 dark:text-gray-300"
                    >
                    {{ toggleText }}
                </span>
                </label>

                <!-- Adult option -->
                <label class="relative inline-flex items-center cursor-pointer">
                    <input
                            {{ stimulus_action('search-catalog', 'setAdultValue', 'click') }}
                            type="checkbox"
                            name="adult-input"
                            value=""
                            pattern="^[01]$"
                            class="sr-only peer"
                    >
                    <div
                            class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"
                    ></div>
                    <span
                            class="ms-3 text-sm font-medium text-gray-900 dark:text-gray-300"
                    >
                    Adulte
                </span>
                </label>
            </div>
        </div>
</div>
</section>
</div>
