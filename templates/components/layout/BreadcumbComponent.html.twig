<div{{ attributes }}>
    <!-- component html -->
    <nav
            class="flex mx-auto max-w-screen-xl {% if isCenter %}justify-center{% endif%} px-2 md:px-4 lg:px-4"
            aria-label="Breadcrumb"
    >
        <ol class="inline-flex items-center ml-1 text-sm lg:text-xl space-x-1 md:space-x-1 rtl:space-x-reverse">
            <li class="inline-flex items-center">
                <a
                        href="{{ path('home_index') }}"
                        class="inline-flex items-center font-bangers-regular text-breadcrumb-mob md:text-breadcrumb-tab lg:text-breadcrumb-desk text-app-clear-black hover:text-app-clear-purple3 dark:text-app-dark-gray2 dark:hover:text-app-dark-purple"
                        title="Accueil"
                >
                    <svg class="w-3 h-3 lg:w-4 lg:h-4 me-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                        <path d="m19.707 9.293-2-2-7-7a1 1 0 0 0-1.414 0l-7 7-2 2a1 1 0 0 0 1.414 1.414L2 10.414V18a2 2 0 0 0 2 2h3a1 1 0 0 0 1-1v-4a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1v4a1 1 0 0 0 1 1h3a2 2 0 0 0 2-2v-7.586l.293.293a1 1 0 0 0 1.414-1.414Z"/>
                    </svg>
                    Accueil
                </a>
            </li>
            {% for key, menu in menus %}
                {% if key == 'current' %}
                    <li aria-current="page">
                        <div class="flex items-center">
                            <svg class="rtl:rotate-180 w-2 h-2 text-app-clear-black dark:text-app-dark-gray2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                            </svg>
                            <span
                                    class="ms-1 font-bangers-regular text-breadcrumb-mob md:text-breadcrumb-tab lg:text-breadcrumb-desk text-app-clear-purple3 dark:text-app-dark-purple"
                            >{{ menu }}
                            </span>
                        </div>
                    </li>
                {% else %}
                    <li>
                        <div class="flex items-center">
                            <svg class="rtl:rotate-180 w-2 h-2 text-app-clear-black dark:text-app-dark-gray2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                            </svg>
                            <a
                                    href="{{ menu }}"
                                    class="ms-1 font-bangers-regular text-breadcrumb-mob md:text-breadcrumb-tab lg:text-breadcrumb-desk text-app-clear-black hover:text-app-focus-purple dark:text-app-dark-gray2 dark:hover:text-app-focus-purple"
                                    title="{{ key }}"
                            >
                                {{ key }}
                            </a>
                        </div>
                    </li>
                {% endif %}
            {% endfor %}
        </ol>
    </nav>
</div>
