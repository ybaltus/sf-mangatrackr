{% trans_default_domain 'app' %}
<div{{ attributes }}>
    <!-- component html -->
    <footer class="bg-app-clear-black dark:bg-app-dark-black">
        <div class="w-full max-w-screen-xl mx-auto py-4 px-4 lg:py-8 lg:px-10">
            <div class="md:flex md:items-center md:justify-between">
{#            <div class="sm:flex sm:items-center sm:justify-between">#}
                {# App Name #}
                <a
                        href="{{ path('home_index') }}"
                        class="flex items-center my-6 sm:my-0 space-x-3 rtl:space-x-reverse"
                        title="{{ app_name }}"
                >
                    <span class="self-center tracking-footer-spacing text-footer-mob md:text-footer-tab lg:text-footer-desk font-bangers-regular text-app-clear-purple3 dark:text-app-dark-purple">
                        {{ app_name }}
                    </span>
                </a>
                {# Links #}
                <ul
                        class="md:order-last md:flex md:flex-wrap md:items-center mb-6 text-text-footer-mob md:text-text-footer-tab lg:text-text-footer-desk font-sora-semiBold text-app-clear-white sm:mb-0 dark:text-app-dark-gray2"
                >
                    <li>
                        <a href="{{ path('about_index') }}" class="hover:underline me-2 md:me-6" title="{{ 'app.about'|trans|capitalize }}">{{ 'app.about'|trans|capitalize }}</a>
                    </li>
                    <li class="my-6 md:my-0">
                        <a href="{{ path('terms_of_use_index') }}" class="hover:underline me-2 md:me-6" title="{{ 'app.terms_of_use'|trans|capitalize }}">{{ 'app.terms_of_use'|trans|capitalize }}</a>
                    </li>
                    <li>
                        v{{ app_version }}
                    </li>
                </ul>
                {# Copyright #}
                <span
                        class="block my-10 md:my-0 text-text-footer-mob md:text-text-footer-tab lg:text-text-footer-desk font-sora-semiBold text-app-clear-white md:text-center dark:text-app-dark-gray2"
                >
                Â© 2024 <a href="{{ path('home_index') }}"
                          class="hover:underline"
                          title="{{ app_name }}"
                    >{{ app_name }}</a>.
            </span>
            </div>
        </div>
    </footer>
