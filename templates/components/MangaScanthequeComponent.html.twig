<div{{ attributes }}>
    <!-- component html -->
    <section
            id="scantheque-section-{{ statusTrack }}"
            class="scantheque-manga-section bg-app-clear-white dark:bg-app-dark-gray1"
    >
        <div
                class="py-24 px-8 mx-auto max-w-screen-xl lg:py-24 lg:px-6"
                {% if statusTrack == 'archived' %}
                    id="accordion-collapse"
                    data-accordion="collapse"
                    data-active-classes="bg-app-clear-white dark:bg-app-dark-gray1"
                {% endif %}
        >
            <div class="text-center lg:text-left mb-section-h2-mob-bottom lg:mb-section-h2-desk-bottom">
                {% if statusTrack == 'archived' %}
                    <h2
                            id="title-{{ statusTrack }}"
                            class="justify-center lg:justify-start flex text-h2-mob lg:text-h2-desk tracking-normal font-sora-semiBold text-app-dark-gray1 dark:text-app-clear-white"
                    >
                        {{ title }} (<span></span>)
                        <button
                                type="button"
                                class="flex ml-5 font-medium justify-between rtl:text-right bg-app-clear-white dark:bg-app-dark-gray1"
                                data-accordion-target="#scantheque-list-{{ statusTrack }}"
                                aria-expanded="false"
                                aria-controls="scantheque-list-{{ statusTrack }}"
                                title="Afficher les chapitres archivÃ©s"
                        >
                            <svg
                                    data-accordion-icon
                                    class="my-auto w-9 h-9 lg:w-9 lg:h-9 rotate-180 shrink-0 text-app-focus-purple "
                                    aria-hidden="true"
                                    xmlns="http://www.w3.org/2000/svg"
                                    fill="none"
                                    viewBox="0 0 10 6"
                            >
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5 5 1 1 5"/>
                            </svg>
                        </button>
                    </h2>
                {% else %}
                    <h2
                            id="title-{{ statusTrack }}"
                            class="text-h2-mob lg:text-h2-desk tracking-normal font-sora-semiBold text-app-dark-gray1 dark:text-app-clear-white"
                    >
                        {{ title }} (<span></span>)

                    </h2>
                {% endif %}
            </div>
            <div
                    {{ stimulus_target('scantheque',  statusTrack) }}
                    id="scantheque-list-{{ statusTrack }}"
                    {% if statusTrack == 'archived' %}
                        aria-labelledby="title-{{ statusTrack }}"
                        class="hidden grid gap-4 lg:gap-y-16 lg:gap-x-32 grid-cols-1 lg:grid-cols-2"
                    {% else %}
                            class="grid gap-4 lg:gap-y-16 lg:gap-x-32 grid-cols-1 lg:grid-cols-2"

                    {% endif %}
            >
            </div>
        </div>
    </section>
</div>