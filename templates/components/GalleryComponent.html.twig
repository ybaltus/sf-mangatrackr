<div{{ attributes }}>
    <!-- component html -->
    <section class="bg-app-clear-white dark:bg-app-dark-black">
        <div class="px-4 grid gap-x-4 gap-y-20 sm:grid-cols-2 lg:grid-cols-4">
            {% for manga in mangas %}
                <div class="max-w-sm bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
                    <a href="#">
                        <img class="p-2 w-max rounded-t-lg" src="{{ manga.mangaJikanAPI.malImgWebp }}" alt="{{ manga.title }}" />
                        <div class="p-5">
                            <h5 class="mb-2 text-2xl font-bold tracking-tight text-app-clear-black dark:text-app-dark-gray2">
                                {{ manga.title }}
                            </h5>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
        <div class="flex justify-center py-20">
            {{ component('ButtonGradientComponent', {
                title: 'Afficher plus'
            }) }}
        </div>
    </section>
</div>
